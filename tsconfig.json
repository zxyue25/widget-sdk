{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "noEmit": false,
      "noEmitHelpers": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "allowUnreachableCode": true,
      "lib": ["es2017", "dom"],
      "typeRoots": ["node_modules/@types"],
      "types": ["mocha", "node", "should"],
      "outDir": "./build",
      "rootDir": "./src"
  },
  "exclude": [
      "node_modules",
      "build",
      "**/*.test.ts",
      "temp"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}